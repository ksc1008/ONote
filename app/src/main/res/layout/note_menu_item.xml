<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="20dp"
        android:elevation="6dp"
        android:background="@drawable/round_fragment_box"
        android:backgroundTint="#FAFAFA"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
            android:id="@+id/note_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/open_button"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center_vertical"
            android:layout_height="100dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:text="Text"
            android:autoSizeMinTextSize="7dp"
            android:autoSizeMaxTextSize="30dp"
            android:maxLines="1"
            android:autoSizeTextType="uniform" android:layout_width="0dp"/>

        <Button
            android:id="@+id/remove_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginVertical="15dp"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeMaxTextSize="40dp"
            android:autoSizeTextType="uniform"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintWidth_max="150dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1.5"
            android:text="Remove"
            android:backgroundTint="#f02121"
            />

        <Button
            android:id="@+id/open_button"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="0dp"
            android:layout_marginVertical="15dp"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeMaxTextSize="40dp"
            android:autoSizeTextType="uniform"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintWidth_max="150dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/remove_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1.5"
            app:layout_constraintHorizontal_bias="1"
            android:text="Open"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
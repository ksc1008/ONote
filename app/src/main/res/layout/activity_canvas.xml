<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CanvasActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="8dp" android:text="Back"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="72dp"
        android:layout_marginTop="72dp">

        <com.example.canvastext.MyCanvasView
            android:id="@+id/canvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/penButton"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="8dp" android:text="Pen"/>

        <Button
            android:id="@+id/EraserButton"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/penButton"
            app:layout_constraintStart_toEndOf="@id/penButton"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="8dp" android:text="Eraser"/>

        <Button
            android:id="@+id/ClearButton"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="8dp" android:text="Clear"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginStart="5dp"
        android:layout_width="40dp"
        android:layout_height="250dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/toolbar_handButton"
            android:alpha="0.1"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:background="#00FFFFFF"
            android:scaleType="centerInside"
            android:src="@drawable/hand" />

        <ImageButton
            android:id="@+id/toolbar_penButton"
            android:alpha="0.7"
            android:padding="3dp"
            android:layout_marginVertical="10dp"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#00FFFFFF"
            android:scaleType="centerInside"
            android:src="@drawable/pen" />

        <ImageButton
            android:id="@+id/toolbar_rectangleButton"
            android:alpha="0.1"
            android:padding="3dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#00FFFFFF"
            android:scaleType="centerInside"
            android:src="@drawable/square" />

        <ImageButton
            android:id="@+id/toolbar_functionButton"
            android:alpha="0.1"
            android:padding="3dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#00FFFFFF"
            android:scaleType="centerInside"
            android:src="@drawable/func" />
    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/formulaFragmentContainer"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="30dp"
        android:elevation="12dp"
        android:background="@drawable/round_fragment_box"
        android:layout_marginBottom="60dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>